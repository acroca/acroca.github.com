#!/usr/bin/env ruby

compile '/stylesheets/*/' do
  filter :sass
end

compile '/960/*/' do
end

compile '/assets/*', '/assets/*' do
end

compile '/icons/*' do
  filter :thumbnailize, :width => 40
end

compile '/*' do
  filter :haml
  layout 'default'
end

route '/stylesheets/*/' do
  item.identifier.chop + '.css'
end

route '/960/grid/' do
  item.identifier.chop + '.css'
end

route '/assets/*', '/assets/*' do
  item.identifier.chop.gsub("/assets", "") + '.' + item[:extension]
end

route '/icons/*', :rep => :default do
  item.identifier.chop + '.' + item[:extension]
end

route '*' do
  item.identifier + 'index.html'
end

layout '*', :haml
